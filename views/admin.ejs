            <div class="container">
                <div class="title1">Enter Details</div>
                <form action="#">
                    <div class="input-box">
                        <div class="col1">
                            <div class="space2"><br><br><br></div>
                            <h4>Policy Name</h4>
                            <input type="text" name="name" placeholder="Enter policy name" required>
                            <div class="space"></div>
                            <h4>State</h4>
                            <input type="text" name="state" placeholder="Enter State" disabled>
                            <div class="space"></div>
                            <h4>Income</h4>
                            <input type="text" name="income" placeholder="Enter your yearly income" required>
                            <div class="space"></div>
                            <h4>Occupation</h4>
                            <input type="text" name="occupation" placeholder="Enter your occupation" required>
                        </div>
                        <div class="col2">
                            <h4>Region</h4>
                            <select name="Region">
                                <option value="Center">Center</option>
                                <option value="State">State</option>
                            </select>
                            <div class="space"></div>
                            <h4>Caste</h4>
                            <input type="text" name="Caste" placeholder="Enter your caste" required>
                            <div class="innerRow">
                                <div class="innercol1">
                                    <h4>Age</h4>
                                    <input type="number" name="ageNumber" placeholder="Enter Your Age" required>
                                </div>
                                <div class="innercol2">
                                    <h4>Gender</h4>
                                        <select name="gender">
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                            <option value="Others">Others</option>
                                        </select>
                                </div>
                            </div>  
                            <div class="space"></div>
                            <h4>Policy Category</h4>
                            <input type="number" name="mobile" placeholder="Enter Policy Category" required>
                            <div class="space"></div>
                            <input type="submit" name="register" id="register" value="Submit">
                        </div>
                    </div>
                </form>
            </div>
        </div>
