  <div class="row">
    <div class="container">
      <form method="post"  action="register">
        <div class="title"> Create Your Account</div>
        <h4>Already have accont?<a href="userLogin"> Login now</a></h4>
        <div class="input-box">
          <h4> Name</h4>
          <input type="text" name="Name" placeholder="Enter Your First Name" required>
          <div class="space"></div>
          <div class="rowRegister">
            <div class="col1Register">
                <h4>Age</h4>
                <input type="number" name="ageNumber" placeholder="Enter Your Age" required>
            </div>
            <div class="col2Register">
                <h4>Gender</h4>
                <!-- <input type="number" name="ageNumber" placeholder="Enter Your Gender" required> -->
                <select name="gender">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Others">Others</option>
                </select>
            </div>
          </div>
          <h4>Email</h4>
          <input type="email" name="email" placeholder="Enter Your Email" required>
          <div class="space"></div>
          <h4>Password</h4>
          <input type="password" name="password" placeholder="Create a new password" required>
          <div class="space"></div>
          <h4>Confirm Password</h4>
          <input type="password" name="confirmPassword" placeholder="Retype Password" onchange="checkPassword()" required>
          <div class="space"></div>
          <h4>Occupation</h4>
          <input type="text" name="occupation" placeholder="Enter Your Occupation" required>
          <div class="space"></div>
          <h4>Qualification</h4>
          <input type="text" name="qualification" placeholder="Enter Your qualification" required>
          <div class="space"></div>
          <h4>Caste</h4>
          <input type="text" name="caste" placeholder="Enter Your Caste" required>
          <div class="space"></div>
          <h4>Family Income</h4>
          <input type="number" name="income" placeholder="Enter Your Family Income" required>
          <div class="space"></div>
          <h4>State</h4>
          <input type="text" name="state" placeholder="Enter Your state" required>
          <div class="space"></div>
          <input type="submit" name="register" id="register" value="Register">
          <div class="space"></div>
          <div class="space"></div>
        </div>
      </form>
      
